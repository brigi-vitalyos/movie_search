- if movies.empty?
  %p No results found :(
- else
  .row.row-cols-1.row-cols-sm-2.row-cols-md-5.g-2
    - movies.each do |movie|
      .col
        .card.shadow-sm
          - if movie.poster_path.present?
            = image_tag "https://image.tmdb.org/t/p/original/#{movie.poster_path}", class: "card-img-top shadow-sm"
          - else
            = image_tag "https://placehold.co/1400x2100?text=#{movie.title}&font=roboto", class: "card-img-top shadow-sm"
          .card-body
            %h5.card-text= movie.title
            %p.card-text= movie.overview.truncate(150)
            .d-flex.justify-content-between.align-items-center
              .btn-group
                = button_to "View", movies_show_path, params: {movie: movie.to_json}, method: :post, class:"btn btn-sm btn-outline-secondary"
              -# %small.text-body-secondary="Popularity: 11"

  = render 'pagination', total_pages: total_pages
